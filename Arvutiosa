def etapi_pikkus(tee_pikkus_r, lisatav_pikkus):
    pikkus=tee_pikkus_r+(float(tee_pikkus_r)*int(lisatav_pikkus)/100)
    return round(pikkus,2)
    
failinimi=input("Sisestage failinimi: ")
protsent=int(input("Mitu protsenti tuleb igale päevateekonnale juurde lisada? "))
readfailist=open(failinimi, encoding="UTF-8")
read=[]
for rida in readfailist:
    read.append(float(rida))
readfailist.close()
summa=0
for i in range(len(read)):
    if (etapi_pikkus(read[i], protsent))>30:
        summa=summa+etapi_pikkus(read[i], protsent)
        print (str(etapi_pikkus(read[i],protsent))+" See oli raske!")
    else:
        summa=summa+etapi_pikkus(read[i], protsent)
        print(etapi_pikkus(read[i],protsent))
        
print("Kokku kõndis rändur " + str(round(summa,2)) + " kilomeetrit.")
